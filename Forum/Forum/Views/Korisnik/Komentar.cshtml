@model Forum.Models.Komentar

@{ ViewBag.Title = "Novi komentar"; }
@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group col-md-offset-2">
        <div>
            <textarea name="Tekst" id="Tekst" class="form-control" style="min-width:85%;min-height:75px"></textarea>
            @Html.ValidationMessageFor(model => model.Tekst, "", new { @class = "text-danger" })
        </div>
        <input onclick="funckija()" type="submit" value="Dodaj komentar" class="btn btn-default" />
    </div>

</div>}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}