@model Forum.Models.Korisnik

@{
    ViewBag.Title = "Izmena";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="col-md-6 form-horizontal" style="margin-top:2%">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id) 
        <div class="form-group">
            <p class="control-label col-md-2" style="color:white">Stara lozinka</p>
            <div class="col-md-10">
                <input type="password" name="staralozinka" id="staralozinka" class="form-control" />
                @Html.ValidationMessageFor(model => model.Lozinka, "", new { lozinka = staralozinka })
            </div>
        </div>
        <div class="form-group">
            <p class="control-label col-md-2" style="color:white">Nova lozinka</p>
            <div class="col-md-10">
                <input type="password" name="Lozinka" id="lozinka" class="form-control" />
                @Html.ValidationMessageFor(model => model.Lozinka, "", new { @class = "text-danger" })
            </div>
        </div> 
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sačuvaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
