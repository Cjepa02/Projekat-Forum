@model Forum.Models.Podforum

@{ ViewBag.Title = "View"; }

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-4">
    </div>
    <div class="col-md-6 form-horizontal" style="margin-top:15%">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <p class="control-label col-md-3" style="color:white">Naslov podforuma</p>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Naslov, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Naslov, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <p class="control-label col-md-3" style="color:white">Moderator</p>
                <div class="col-md-9">
                    <select name="KorisnikKorisnickoIme" class="form-control">
                        @{ for (int i = 0; i < ViewBag.Korisniks.Count; i++)
                            {
                                if (ViewBag.Korisniks[i].Tip_korisnika != "admin")
                                {
                                    <option value="@ViewBag.Korisniks[i].KorisnickoIme">@ViewBag.Korisniks[i].KorisnickoIme</option>
                                }
                            }
                        }
                    </select>
                    <div class="form-group" style="margin-top:3%">
                        <div class="col-md-9">
                            <input type="submit" value="Napravi" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}