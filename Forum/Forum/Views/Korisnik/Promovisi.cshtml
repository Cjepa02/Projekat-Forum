@model Forum.Models.Podforum

@{
    ViewBag.Title = "View";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div class="col-md-4" style="margin-top:2%">
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="control-label col-md-2" style="color:white">Naslov</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Naslov, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Naslov, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2" style="color:white">Moderator</p>
            <div class="col-md-10">
                <select name="Moderator" class="form-control">
                    @{
                        for (int i = 0; i < ViewBag.Korisniks.Count; i++)
                        {
                            <option value="@ViewBag.Korisniks[i].KorisnickoIme">@ViewBag.Korisniks[i].KorisnickoIme</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Napravi" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>  
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
