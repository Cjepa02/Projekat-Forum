@model Forum.Models.Tema

@{
    ViewBag.Title = "Tema";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-4">
    </div>
    <div class="col-md-6 form-horizontal" style="margin-top:15%">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="control-label col-md-2" style="color:white">Naslov</p>
            <div class="col-md-6">
                <input class="form-control" type="text" name="Naslov" id="Naslov" value="@ViewBag.Tema.Naslov">
                @Html.ValidationMessageFor(model => model.Naslov, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <p class="control-label col-md-2" style="color:white">Tekst</p>
            <div class="col-md-6">
                <textarea class="form-control" rows="5" cols="5" name="Tekst">@ViewBag.Tema.Tekst</textarea>
                @Html.ValidationMessageFor(model => model.Tekst, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Izmeni" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}